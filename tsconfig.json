{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"types": ["node", "svelte"],
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"removeComments": true,
		"isolatedModules": true,
		"paths": {
			"src": ["src/*"]
		},
		"lib": ["dom", "es5", "scripthost", "es2015"],
		"strict": true
	},
	"include": ["**/*.ts", "**/*.test.ts", "**/*.svelte"],
	"exclude": ["node_modules/*"]
}
